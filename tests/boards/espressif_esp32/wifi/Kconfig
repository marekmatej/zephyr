menu "ESP32 WIFI TEST"

config WIFI_TEST_SSID
	string "Wi-Fi Test SSID"
	default "myssid"
	help
		SSID to connect

config WIFI_TEST_PSK
	string "Wi-Fi PSK"
	default "mypassword"
	help
		Wifi Password

choice WIFI_TEST_AUTH_MODE_SELECT
	prompt "Security Option"
	default WIFI_TEST_AUTH_MODE_NONE

config WIFI_TEST_AUTH_MODE_NONE
	bool "Open Security"
	help
	  Enable for Open Security

config WIFI_TEST_AUTH_MODE_WPA2
	bool "WPA2 Security"
	help
	  Enable for WPA2 Security

config WIFI_TEST_AUTH_MODE_WPA3
	bool "WPA3 Security"
	select ESP_WIFI_ENABLE_WPA3_SAE
	help
		Enable for WPA3 Security

endchoice

endmenu
source "Kconfig.zephyr"
